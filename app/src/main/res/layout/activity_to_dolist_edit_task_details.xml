<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToDOListEditTaskDetails">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/oswald"
        android:text="Edit Task "
        android:textColor="#6f5642"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/editDetailBackButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <Button
        android:id="@+id/saveEditTaskButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/btn_circle"
        android:backgroundTint="#CC6B49"
        android:drawableEnd="@drawable/ic_addbutton"
        android:fontFamily="@font/roboto"
        android:padding="15dp"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCurrentTaskDeadline" />

    <EditText
        android:id="@+id/editCurrentTaskStartTime"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/ic_time"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/roboto"
        android:hint="Start Time"
        android:inputType="datetime"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCurrentTaskDescription" />

    <EditText
        android:id="@+id/editCurrentTaskDeadline"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/ic_deadline"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/roboto"
        android:hint="Deadline"
        android:inputType="datetime"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCurrentTaskStartTime" />

    <EditText
        android:id="@+id/editCurrentTaskTitle"
        android:layout_width="320dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Title"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/editCurrentTaskDescription"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Description"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCurrentTaskTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>